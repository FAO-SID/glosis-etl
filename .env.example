# ============================================================================
# GLOSIS Platform Environment Configuration
# ============================================================================
# Copy this file to .env and customize for your environment
# Usage: cp .env.example .env

# ============================================================================
# PostgreSQL Database Configuration
# ============================================================================
# Database name
POSTGRES_DB=glosis

# Database admin user
POSTGRES_USER=glosis

# Database admin password (change in production!)
POSTGRES_PASSWORD=glosis

# ============================================================================
# Application Environment
# ============================================================================
# Logging level: DEBUG, INFO, WARN, ERROR
SHINY_LOG_LEVEL=INFO

# R memory limit
R_MAX_MEM_SIZE=2Gb

# ============================================================================
# Optional: PostgreSQL Advanced Settings
# ============================================================================
# Uncomment and customize if needed
# POSTGRES_INITDB_ARGS=-c shared_buffers=512MB -c max_connections=300
